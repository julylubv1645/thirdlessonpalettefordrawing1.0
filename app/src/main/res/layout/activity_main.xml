<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E3F1"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Палитра для рисования 1.0"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#8E5DD5"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.thirdlessonpalettefordrawing10.ArtView
        android:id="@+id/art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingClass" />
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/buttonBrush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:backgroundTint="@null"
            android:backgroundTintMode="add"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/brush"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/buttonPallet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:backgroundTint="@null"
            android:backgroundTintMode="add"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pallet"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/buttonMenu"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@null"
        android:backgroundTint="@null"
        android:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>